# Production Environment Template
# Copy this to .env.production and fill in actual production values

NODE_ENV=production
PORT=5000
API_URL=https://api.lux-furniture.com

# Frontend
FRONTEND_URL=https://lux-furniture.com
FRONTEND_URL_PROD=https://lux-furniture.com

# Database (Supabase)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# JWT - CHANGE THIS TO A STRONG SECRET IN PRODUCTION!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate-strong-production-secret-here-minimum-32-chars

# Payme Configuration (Production)
PAYME_MERCHANT_ID=your-production-payme-merchant-id
PAYME_API_KEY=your-production-payme-api-key
PAYME_SECRET_KEY=your-production-payme-secret-key
PAYME_CALLBACK_URL=https://api.lux-furniture.com/payments/payme/callback

# CLICK Configuration (Production)
CLICK_MERCHANT_ID=your-production-click-merchant-id
CLICK_SERVICE_ID=your-production-click-service-id
CLICK_API_KEY=your-production-click-api-key
CLICK_SECRET_KEY=your-production-click-secret-key
CLICK_CALLBACK_URL=https://api.lux-furniture.com/payments/click/callback

# UZUM Configuration (Production)
UZUM_MERCHANT_ID=your-production-uzum-merchant-id
UZUM_API_KEY=your-production-uzum-api-key
UZUM_SECRET_KEY=your-production-uzum-secret-key
UZUM_CALLBACK_URL=https://api.lux-furniture.com/payments/uzum/callback

# Logging
LOG_LEVEL=info
